<!doctype html>
<html lang="en">
<% include layout/header %>

<body>
  <div>
    <div>
      <% include layout/navbar %>

    </div>

    <div style="margin-top: 200px"></div>

    <!-- error flash messages if invalid input -->
    <% if (typeof message != 'undefined' && message != '') { %>
      <div class="alert alert-danger" style="text-align:left">
        <ul style="padding-left: 20px;">
        <%= message %>
        </ul>
      </div>
    <% } %>

    <div class="container" style="border-style:solid; border: 1px solid grey; border-radius: 10px; width:500px;">


      <form class="center" method="POST" action="/auth/login" style="width:97%">
        <h1 style="text-align:center; margin-top:20px; "> Sign In </h1>

        <div class=" container">

          <div class="form-group col">
            <label for="email">Email:</label>
            <input name="email" class="form-control" id="email" aria-describedby="emailHelp"
              placeholder="EMAIL">
          </div>

          <div class="form-group col">
            <label for="password">Password:</label>
            <input type="password" name="password" class="form-control" id="password"
              placeholder="PASSWORD">
            <div>
              <p class="message" style="margin-top:20px"> Forgot Password? <a href="#"> Reset </a></p>
            </div>
            <div>
              <p class="message"> Don't have an account? <a href="/auth/register"> Register </a></p>
              <button type="submit" class="btn btn-primary" style="margin-top: 20px; margin-bottom: 10px;">Login</button>
            </div>
          </div>

        </div>

      </form>
    </div>
  </div>
  <% include layout/footer %>
</body>

</html>