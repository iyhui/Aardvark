<!doctype html>
<html lang="en">

<% include layout/header %>

<body>
  <% include layout/navbar %>
  <div id="log" class="container">
    <form class="center" method="POST" action="/auth/login" style="width:97%">

      <div class="form-group col">
        <h1 style="text-align:center; margin-top:20px; "> Sign In </h1>
      </div>

      <div class="form-group col">
        <label for="email">Email:</label>
        <input name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="EMAIL">
      </div>

      <div class="form-group col">
        <label for="password">Password:</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="PASSWORD">
      </div>

      <div class="form-group col">
        <p class="message" style="margin-top:20px"> Forgot Password? <a href="#"> Reset </a></p>
      </div>

      <div class="form-group col">
        <p class="message"> Don't have an account? <a href="/auth/register"> Register </a></p>
      </div>

      <div class="form-group col">
        <div align="right">
          <button type="submit" class="btn btn-warning" style="margin-top: 20px; margin-bottom: 10px;">Login</button>
        </div>
      </div>

    </form>
  </div>
  <% include layout/footer %>
</body>

</html>
