<!DOCTYPE html>
<html lang="en">
<% include layout/header %>
<body>
    <div>
        <% include layout/navbar %>
    </div>
    <br />
    <br />
    <div class="jumbotron jumbotron-fluid">
            <div class="container disclaimer">
              <h3>SFSU Software Engineering Project CSC 648-848, Fall 2019. For Demonstration Only</h3>      
            </div>
          </div>

    <!--Carousel-->
    <div id="carousel">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div id="inam" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <div class="container">
                                    <div class="row">
                                        <% for(let i=0; i < 3; i++) { %> 
                                         <div class="col-sm-12 col-lg-4">
                                            <div class="card ">
                                                <img class="card-img-top" src="data:itemImage/jpg;base64,<%= itemImages[i] %>" alt="<%= items[i].name %>">
                                                <div class="card-body">
                                                    <h4 class="card-title"><%= items[i].name %></h4>
                                                    <p class="card-text"><%= items[i].description %></p>
                                                   <a href="/searchResults/<%=items[i].id%>"> <button type="button" class="btn btn-warning">Read More</button></a>
                                                </div>
                                            </div>
                                        </div>
 <% } %>
                                    </div>
                                </div>
                            </div>

                            <div class="carousel-item">
                                <div class="container">
                                    <div class="row">
                                        <% for(let i=4; i < items.length; i++) { %> 
                                         <div class="col-sm-12 col-lg-4">
                                            <div class="card">
                                                <img class="card-img-top" src="data:itemImage/jpg;base64,<%= itemImages[i] %>" alt="<%= items[i].name %>">
                                                <div class="card-body">
                                                    <h4 class="card-title"><%= items[i].name %></h4>
                                                    <p class="card-text"><%= items[i].description %></p>
                                                    <a href="/searchResults/<%=items[i].id%>"> <button type="button" class="btn btn-warning">Read More</button></a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <a href="#inam" class="carousel-control-prev" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    </a>
                     <a href="#inam" class="carousel-control-next" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>

                </div>

                

            </div>

        </div>

    </div>







   

  
    <!--Footer-->
    <% include layout/footer %>
</body>

</html>